<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message| %>
        $('.answer-errors').html('<%= j message %>');
    <% end %>
<% else %>
    $('.answers').append('<%= j render 'questions/answer', answer: @answer %>');
    $('#answer_body').val('');

    $('#count').text(parseInt($('#count').text())+1);
<% end %>
