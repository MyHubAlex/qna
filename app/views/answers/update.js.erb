<% unless flash[:error].present? %>
  $('#answer-<%= @answer.id %>').replaceWith('<%= j render @answer %>').show();
    
  $('.edit-answer-link').click(function(e) {
    e.preventDefault();
    $(this).hide();
    answer_id = $(this).data('answerId');
    $('form#edit-answer-' + answer_id).show();
  });
<% end %>
